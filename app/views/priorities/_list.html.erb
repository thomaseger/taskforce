<table class="table table-responsive table-hover">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
  <tbody>
    <% @priorities.each do |priority| %>
      <tr>
        <td><%= priority.name %></td>
        <td><%= priority.description %></td>
        <td>
          <%= link_to priority_path(priority) do %>
            <span class="glyphicon glyphicon-eye-open"></span>
          <% end %>
        </td>

        <td>
          <%= link_to edit_priority_path(priority) do %>
            <span class="glyphicon glyphicon-edit"></span>
          <% end %>
        </td>

        <td>
          <%= link_to priority_path(priority), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
