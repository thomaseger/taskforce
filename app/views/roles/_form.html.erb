<% if @role.errors.any? %>
  <div class="alert alert-danger">
    <p><strong>Sorry!</strong> <%= pluralize(@role.errors.count, "error") %> occured:</p>
    <ul>
    <% @role.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @role do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, {:class => 'form-control', :readonly => false} %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, {:class => 'form-control'} %>
  </div>
  
  <div class="form-group"> 
    <%= f.submit "OK", :class => 'btn btn-primary' %>
  </div>
  
<% end %>
